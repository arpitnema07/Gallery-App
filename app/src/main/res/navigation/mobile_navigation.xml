        android:name="com.example.galleryapp.main.ui.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_searchPhotos"
            app:destination="@id/searchPhotos" />
    </fragment>
    <fragment
        android:id="@+id/searchPhotos"
        android:name="com.example.galleryapp.main.ui.SearchPhotos"
